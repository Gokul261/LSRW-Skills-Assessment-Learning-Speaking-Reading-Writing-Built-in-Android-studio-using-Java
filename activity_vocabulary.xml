<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/home">

    <!-- Question Number -->
    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1 of 10"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="8dp"/>

    <!-- Question Text -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question appears here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="8dp"/>

    <RadioGroup
        android:id="@+id/options_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton android:id="@+id/option1" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/option2" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/option3" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/option4" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/previous_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="12dp"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="16sp"
            android:enabled="true"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="12dp"/>
    </LinearLayout>
</LinearLayout>
